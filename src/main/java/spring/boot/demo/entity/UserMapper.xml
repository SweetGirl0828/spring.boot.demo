<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="msj.mapper.UserMapper">
	<resultMap type="user" id="userResultMap">
		<id property="uid" column="u_id" />
		<result property="uname" column="u_name" />
		<result property="uphone" column="u_phone"  />
		<collection property="accounts" javaType="ArrayList" ofType="account" column="u_id" select="selectAccForUser" />
	</resultMap>
	<insert id="inserUser" parameterType="user">
		insert into T_USER(u_name,u_phone) values(#{uname},#{uphone})	
	</insert>
	<select id="findUserById" parameterType="Integer" resultMap="userResultMap">
		select * from T_USER where u_id = #{uid}
	</select>
	<select id="findUserList" resultType="user">
		select u_id uid,u_name uname,u_phone uphone from T_USER
	</select>
	<update id="updateUser" parameterType="user" > 
		update T_USER set u_name = #{uname},u_phone = #{uphone} where u_id = #{uid}
	</update>
	<delete id="delUserById" parameterType="Integer">
		delete from T_USER where u_id=#{uid}
	</delete>
	<select id="selectAccForUser" parameterType="Integer" resultType="account" >
		SELECT a_id aid,acc_no accNo,acc_name accName FROM T_ACCOUNT WHERE u_id = #{uid}
	</select>	
	
</mapper>